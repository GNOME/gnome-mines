<gconfschemafile>
    <schemalist>    
     <schema>
     <key>/schemas/apps/gnomine/geometry/xsize</key>
     <applyto>/apps/gnomine/geometry/xsize</applyto>
     <owner>gnomine</owner>
     <type>int</type>
     <default>16</default>
     <locale name="C">
     <short>Number of columns in a custom game</short>
     <long></long>
     </locale>
     </schema>

     <schema>
     <key>/schemas/apps/gnomine/geometry/ysize</key>
     <applyto>/apps/gnomine/geometry/ysize</applyto>
     <owner>gnomine</owner>
     <type>int</type>
     <default>16</default>
     <locale name="C">
     <short>Number of rows in a custom game</short>
     <long></long>
     </locale>
     </schema>

     <schema>
     <key>/schemas/apps/gnomine/geometry/nmines</key>
     <applyto>/apps/gnomine/geometry/nmines</applyto>
     <owner>gnomine</owner>
     <type>int</type>
     <default>40</default>
     <locale name="C">
     <short>The number of mines in a custom game</short>
     <long></long>
     </locale>
     </schema>

     <schema>
     <key>/schemas/apps/gnomine/geometry/mode</key>
     <applyto>/apps/gnomine/geometry/mode</applyto>
     <owner>gnomine</owner>  
     <type>int</type>                
     <default>0</default>
     <locale name="C">
     <short>Board size</short>
     <long>Size of the board (0-2 = small-large, 3=custom)</long>
     </locale>
     </schema>

     <schema>
     <key>/schemas/apps/gnomine/use_question_marks</key>
     <applyto>/apps/gnomine/use_question_marks</applyto>
     <owner>gnomine</owner>
     <type>bool</type>
     <default>FALSE</default>
     <locale name="C">
     <short>Use the unknown flag</short>
     <long>Set to true to be able to mark squares as unknown.</long>
     </locale>
     </schema>

     <schema>
     <key>/schemas/apps/gnomine/use_overmine_warning</key>
     <applyto>/apps/gnomine/use_overmine_warning</applyto>
     <owner>gnomine</owner>
     <type>bool</type>
     <default>FALSE</default>
     <locale name="C">
     <short>Warning about too many flags</short>
     <long>Set to true to enable warning icons when too many flags are placed.</long>
     </locale>
     </schema>
								 
     <schema>
     <key>/schemas/apps/gnomine/use_autoflag</key>
     <applyto>/apps/gnomine/use_autoflag</applyto>
     <owner>gnomine</owner>
     <type>bool</type>
     <default>FALSE</default>
     <locale name="C">
     <short>Enable automatic placing of flags</short>
     <long>Set to true to have gnomine automatically flag squares as mined when enough squares are revealed</long>
     </locale>
     </schema>
								 
  </schemalist>
  
</gconfschemafile>
